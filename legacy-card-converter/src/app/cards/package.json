{
  "name": "hubspot-extension",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@hubspot/ui-extensions": "^0.11.5",
    "react": "^18.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@testing-library/react": "^16.3.0",
    "@types/eslint": "^8.56.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-istanbul": "^4.0.15",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "react-dom": "^18.3.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.12"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
